package com.example.demo.brd.service;

import java.util.Optional;

import org.springframework.stereotype.Service;

import com.example.demo.cmm.service.AbstractService;
import com.example.demo.usr.domain.Board;
import com.example.demo.usr.repository.BoardRepository;
import com.example.demo.usr.service.List;
import com.example.demo.usr.service.BoardService;

import lombok.RequiredArgsConstructor;

@Service
@RequiredArgsConstructor
public class BoardServiceImpl extends AbstractService<Board> 
								implements BoardService{
	private final BoardRepository repo;

	@Override public Board save(Board u) {return repo.save(u);}
	@Override public void delete(Board u) {repo.delete(u);}
	@Override public int count() {return (int) repo.count();}
	@Override public Board getOne(int id) {return repo.getOne(id);}
	@Override public Optional<Board> findById(int id) {return repo.existsById(u);}
	@Override public boolean existsById(int id) {return repo.existsById(u);}
	@Override public List<Board> findAll() {return repo.findAll();}
}
