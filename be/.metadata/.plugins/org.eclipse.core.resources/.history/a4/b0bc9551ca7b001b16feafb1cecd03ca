package com.example.demo.usr.controller;

import java.util.HashMap;
import java.util.Map;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;

import com.example.demo.usr.domain.User;
import com.example.demo.usr.repository.UserRepository;
import com.example.demo.usr.service.UserServiceImpl;

import lombok.RequiredArgsConstructor;



@RestController @RequiredArgsConstructor
@RequestMapping(value = "/members", method = {RequestMethod.GET, RequestMethod.POST})
public class UserController {
	
	private final Logger logger = LoggerFactory.getLogger(this.getClass());
	
	final UserRepository repo;
	final UserServiceImpl serv;
	
	@PostMapping("/join")
	public Map<?,?> join(@RequestBody User u) {
		var map = new HashMap<>();
        map.put("message", (serv.join(u) == 1) ? "SUCCESS" : "FAILURE");
		return map;
	}
	
	@PostMapping("/login")
	public Map<?,?> login(@RequestBody User u){
		var map = new HashMap<>();
        User result = serv.login(u);
        map.put("message", result != null ? "SUCCESS" : "FAILURE");
        map.put("sessionMember", result);
		logger.info("�α���: "+ u.toString());
        return map;
	}
	@PutMapping("/modify")
	public Map<?,?> modify(@RequestBody User u){
		var map = new HashMap<>();
		map.put("message", (serv.modify(u) == 1? "SUCCESS" : "FAILURE"));
		logger.info("���� ����: "+ u.toString());
		return map;
	}
	
	@DeleteMapping("/withdrawal")
	public Map<?,?> withdrawal(@RequestBody User u){
		var map = new HashMap<>();
		logger.info("Ż��: "+ m.toString());
		map.put("message", (serv.withdrawal(u) == 1? "SUCCESS" : "FAILURE"));
		return map;
	}
}